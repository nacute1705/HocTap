@model IEnumerable<DoAnWeb.Models.chitiettin>
@{
    ViewBag.Title = "ChiTietTinTuc";
    Layout = "~/Views/_LayoutPageTrangChu.cshtml";
}
<style>
    a:link {}

</style>



<h2>@ViewBag.tieude</h2>
@foreach (var item in Model)
{


    <div class="card mb-3" style="width:100%">
        <div class="row g-0">
            <div class="col-md-4" style="text-align:center">

                <img src="~/Assets/Image/TinTuc/@item.anh" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a href="@item.link">
                        <h5 class="card-title">@item.tieude</h5>
                    </a>
                    <p class="card-text">@item.noidung</p>

                    <p class="card-text"><small class="text-muted">Last updated @item.ngaydang</small></p>
                </div>
            </div>
        </div>
    </div>
}