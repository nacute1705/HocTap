@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/_LayoutPageTrangChu.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Đăng Nhập</li>
    </ol>
</nav>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Tên Đăng Nhập</span>
                <input type="text" class="form-control" placeholder="Nhập vào tên đăng nhập" aria-label="Nhập vào tên đăng nhập" aria-describedby="basic-addon1" name="txttk">
            </div>
            <p style="color:red">@ViewData["errUsername"]</p>
            <div class="input-group mb-3">
                <input type="password" name="txtpass" class="form-control" placeholder="Nhập vào mật khẩu " aria-label="Nhập vào mật khẩu" aria-describedby="basic-addon2">
                <span class="input-group-text" id="basic-addon2">Mật Khẩu</span>
            </div>
            <p style="color:red">@ViewData["errPass"]</p>
            <input type="submit" class="btn btn-primary" value="Đăng Nhập" />
        </div>
        <div class="col-3"></div>

    </div>
}
